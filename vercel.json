{
	"functions": {
		"api/index.js": {
			"runtime": "vercel-node@1",
			"memory": 128
		}
	},
	"rewrites": [
		{
			"source": "/api/:path*",
			"destination": "/api/index.js"
		},
		{
			"source": "/(.*)",
			"destination": "/index.html"
		}
	],
	"builds": [
		{
			"src": "api/**",
			"use": "@vercel/node"
		},
		{
			"src": "public/**",
			"use": "@vercel/static"
		},
		{
			"src": "src/**",
			"use": "@vercel/static",
			"config": {
				"rewrites": [
					{ "source": "/(.*)", "destination": "/index.html" }
				]
			}
		}
	]
}
